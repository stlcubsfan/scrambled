

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
    <h2>Please sign in...</h2>

    <%= f.text_field :email, :required => false, :autofocus => true, :placeholder=>"Email Address", :class=>"form-control" %>
    <%= f.password_field :password, :required => false, :placeholder => "Password", :class=>"form-control" %>
    <label class="checkbox" for = "remember_me">
        <%= f.check_box :remember_me, :as => :boolean  %> Remember Me
    </label>
    <button class="btn btn-lg btn-success btn-block" type="submit">Sign In</button>
<% end %>

<%= render "devise/shared/links" %>
