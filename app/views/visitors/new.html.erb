    </ol>
    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag "masters.jpg" %>
      </div>
      <div class="item">
        <%= image_tag "usopen.jpg" %>
      </div>
      <div class="item">
        <%= image_tag "britishopen.jpg" %>
      </div>
      <div class="item">
        <%= image_tag "pgachampionship.jpg" %>
      </div>
    </div>
  </div>

</div>
